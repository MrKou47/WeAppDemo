/**index.wxss**/
.article-banner {
  width: 100%;
}
.article-banner image {
    display: block;
    width: 100%;
}
.banner-swiper {
    height: 240px;   
    margin-bottom: 8px;
}
.slide-image {
    display: block;
    width: 100%;
}
.article-container {
    position: relative;
    display: flex;
    flex-direction: column;
    width: 100%;
    margin-bottom: 8px;
}
.article-banner {
    width: 100%;
}
.article-banner.short {
    filter: brightness(.5);
}
.article-info-container.long {
    display: flex;
    flex-direction: row;
    padding: 10px 20px 20px 15px; 
}
.article-info-container.short {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    display: flex;
    flex-direction: row;
    padding: 10px 20px 20px 15px; 
    color: #fff;
}
.channel-info image {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    margin-right: 8px;
}
.channel-info.short {
    display: flex;
    align-items: center;
    color: #fff;
}

.article-channel-ico {
    width: 32.6px;
    height: 36.5px;
    margin-right: 12.4px;
}
.article-info {
    flex: 1;
}
.article-title {
    font-size: 18px;
    line-height: 26px;
    color: #333;
}
.channel-info {
    font-size: 11px;
    color: #555;
    margin-top: 6px;
}
.article-des {
    display: -webkit-box!important;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    font-size: 12px;
    line-height: 1.5;
    width: 94%;
    margin-top: 5px;
    /*height: .4rem;*/
}